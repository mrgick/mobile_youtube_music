<ConfirmationDialog>
    orientation: "vertical"
    spacing:"20sp"
    size_hint_y: None
    height: "100sp"
    MDLabel:
        id: message
        text: ""
        pos_hint: {"center_x": .5, "center_y": .5}

<PlaylistDetailScreen>:
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar
        MDBoxLayout:
            orientation: "vertical"
            padding: "20sp"
            spacing: "10sp"
            MDFillRoundFlatIconButton:
                icon: 'delete-outline'
                text: "DELETE PLAYLIST"
                on_release: root.delete_playlist_dialog()
            MDSeparator:
                orientation:'horizontal'
                height: "2sp"
            MDScrollView:
                MDList:
                    id: playlist_list